<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.DevHour" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/devhour_theme_color_status_bar_light</item>
        <item name="colorControlNormal">@color/devhour_theme_color_control_normal_light</item>
        <item name="colorControlActivated">@color/devhour_theme_color_control_activated_light</item>
        <item name="colorControlHighlight">@color/devhour_theme_color_control_highlight_light</item>

        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:colorAccent" tools:targetApi="l">@color/teal_200</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- ============= -->
        <!-- Action Button -->

        <item name="actionButtonLayoutHeight">@dimen/action_button_height</item>
        <item name="actionButtonEms">10</item>
        <item name="actionButtonTextAllCaps">true</item>
        <item name="actionButtonFontFamily">@font/ibmplexsans_semibold</item>
        <item name="actionButtonTextColor">@color/action_button_text_color_light</item>
        <item name="actionButtonTextSize">@dimen/action_button_text_size</item>
        <item name="actionButtonBackground">@drawable/action_button_background_light</item>
        <item name="actionButtonElevation">@dimen/action_button_elevation</item>

        <!-- =========== -->
        <!-- Back Button -->

        <item name="backButtonHeight">@dimen/back_button_height</item>
        <item name="backButtonWidth">@dimen/back_button_width</item>
        <item name="backButtonSource">@drawable/icon_back_48</item>
        <item name="backButtonTintMode">@id/src_atop</item>
        <item name="backButtonBackground">@color/back_button_background_light</item>

        <!-- ===================== -->
        <!-- Bottom Navigation Bar -->

        <item name="bottomNavigationBackground">@color/bottom_navigation_bar_background_light</item>
        <item name="bottomNavigationItemTextColor">@color/bottom_navigation_bar_text_color_light</item>

        <!-- ================ -->
        <!-- Navigation Icons -->

        <item name="bottomNavigationIconLocation">@drawable/icon_location</item>
        <item name="bottomNavigationIconList">@drawable/icon_menu</item>

        <!-- ======== -->
        <!-- EditText -->

        <item name="editTextColor">@color/edit_text_text_color_light</item>
        <item name="editTextHintColor">@color/edit_text_hint_text_color_light</item>
        <item name="editTextBackground">@drawable/edit_text_background_light</item>
        <item name="editTextEms">10</item>
        <item name="editTextPaddingStart">@dimen/edit_text_padding_start</item>
        <item name="editTextPaddingEnd">@dimen/edit_text_padding_end</item>
        <item name="editTextSingleLine">true</item>
        <item name="editTextCursorDrawable">@null</item>
        <item name="editTextLayoutHeight">@dimen/edit_text_height</item>

        <!-- ======== -->
        <!-- Fragment -->

        <item name="fragmentPadding">@dimen/fragment_padding</item>

        <!-- ======== -->
        <!-- Subtitle -->

        <item name="subtitleTextColor">@color/subtitle_text_color_light</item>
        <item name="subtitleTextSize">@dimen/sub_title_text_size</item>
        <item name="subtitleFontFamily">@font/montserrat_regular</item>
        <item name="subtitleLayoutHeight">@id/wrap_content</item>

        <!-- ===== -->
        <!-- Title -->

        <item name="titleTextColor">@color/title_text_color_light</item>
        <item name="titleFontFamily">@font/montserrat_regular</item>
        <item name="titleTextSize">@dimen/title_text_size</item>

        <!-- =========== -->
        <!-- Text Button -->

        <item name="textButtonEms">5</item>
        <item name="textButtonTextSize">@dimen/text_button_text_size</item>
        <item name="textButtonTextColor">@color/text_button_text_color_light</item>
        <item name="textButtonBackground">@color/text_button_background_color_light</item>
        <item name="textButtonElevation">@dimen/text_button_elevation</item>

    </style>

</resources>