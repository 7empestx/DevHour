<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView

        android:id = "@+id/list_item_image_view"
        android:layout_width="96dp"
        android:layout_height="match_parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id = "@+id/list_item_text_view_Food_Name"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_item_image_view"
        />

    <TextView
        android:id= "@+id/list_item_text_view_Category_Name"
        android:layout_width="96dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf= "@id/list_item_text_view_Food_Name"
        app:layout_constraintEnd_toEndOf="@id/list_item_text_view_Food_Name"
        />

    <TextView
        android:id= "@+id/list_item_text_view_Mileage"
        android:layout_width="96dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
