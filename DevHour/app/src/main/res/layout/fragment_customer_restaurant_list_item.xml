<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/fragment_customer_restaurant_list_item_image"
        style="@style/Theme.DevHour.RoundImage"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/fragment_customer_restaurant_list_item_title"
        style="@style/Theme.DevHour.ListItemText"
        android:layout_marginStart="12dp"
        android:text="Restaurant"
        android:textSize="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/fragment_customer_restaurant_list_item_image"
        app:layout_constraintTop_toTopOf="@id/fragment_customer_restaurant_list_item_image"/>

    <TextView
        android:id="@+id/fragment_customer_restaurant_list_item_address_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum"
        android:textSize="16dp"
        android:textColor="@color/devhour_black"
        app:layout_constraintStart_toStartOf="@+id/fragment_customer_restaurant_list_item_title"
        app:layout_constraintBottom_toBottomOf="@id/fragment_customer_restaurant_list_item_image"/>

    <TextView
        android:id="@+id/fragment_business_restaurant_list_item_address_line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/devhour_black"
        android:text="Las Vegas NV, 89108"
        app:layout_constraintStart_toStartOf="@+id/fragment_customer_restaurant_list_item_address_line_1"
        app:layout_constraintTop_toBottomOf="@id/fragment_customer_restaurant_list_item_image"/>

    <TextView
        android:id="@+id/fragment_customer_restaurant_list_item_distance"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
