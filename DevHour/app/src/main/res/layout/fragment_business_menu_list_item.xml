<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.DevHour.ListItem"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/fragment_business_menu_list_item_remove_button"
        style="@style/Theme.DevHour.ListItemRemoveButton"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/list_item_alert_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_item_alert_content"
        style="@style/Theme.DevHour.ListItemContent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/fragment_business_menu_list_item_image"
            style="@style/Theme.DevHour.RoundImage"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/fragment_business_menu_list_item_title"
            style="@style/Theme.DevHour.ListItemText"
            android:layout_marginStart="12dp"
            android:text="Menu Item"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/fragment_business_menu_list_item_image"
            app:layout_constraintTop_toTopOf="@id/fragment_business_menu_list_item_image"/>

        <TextView
            android:id="@+id/fragment_business_menu_list_item_details_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum"
            android:textSize="16dp"
            android:textColor="@color/devhour_black"
            app:layout_constraintStart_toStartOf="@+id/fragment_business_menu_list_item_title"
            app:layout_constraintBottom_toBottomOf="@id/fragment_business_menu_list_item_image"/>

        <TextView
            android:id="@+id/fragment_business_menu_list_item_details_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/devhour_black"
            android:text="Lorem ipsum"
            app:layout_constraintStart_toStartOf="@+id/fragment_business_menu_list_item_details_text_1"
            app:layout_constraintTop_toBottomOf="@id/fragment_business_menu_list_item_image"/>

        <ImageView
            android:id="@+id/fragment_business_menu_list_item_edit_button"
            style="@style/Theme.DevHour.ListEditButton"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>