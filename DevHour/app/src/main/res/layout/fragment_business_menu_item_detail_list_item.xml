<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.DevHour.ListItem"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/fragment_business_menu_list_item_detail_remove_button"
        style="@style/Theme.DevHour.ListItemRemoveButton"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/list_item_alert_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_item_alert_content"
        style="@style/Theme.DevHour.ListItemContent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/fragment_business_menu_list_item_detail_image"
            style="@style/Theme.DevHour.RoundImage"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/fragment_business_menu_list_item_detail_title"
            style="@style/Theme.DevHour.ListItemText"
            android:layout_marginStart="12dp"
            android:text="Menu Item"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/fragment_business_menu_list_item_detail_image"
            app:layout_constraintTop_toTopOf="@id/fragment_business_menu_list_item_detail_image"
            app:layout_constraintBottom_toBottomOf="@id/fragment_business_menu_list_item_detail_image"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>