<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Fragment">

    <ImageButton
        android:id="@+id/fragment_business_add_restaurant_back_button"
        style="@style/Theme.DevHour.BackButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/back_button_color_light"
        tools:ignore="SpeakableTextPresentCheck"/>

    <TextView
        android:id="@+id/fragment_business_add_restaurant_title"
        style="@style/Theme.DevHour.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_business_add_restaurant_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:text="Add Restaurant"/>

    <ImageView
        android:id="@+id/fragment_business_add_restaurant_image"
        style="@style/Theme.DevHour.BigRoundImage"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_business_add_restaurant_title"/>

    <EditText
        android:id="@+id/fragment_business_add_restaurant_name_input"
        android:layout_width="match_parent"
        style="@style/Theme.DevHour.EditText"
        android:layout_marginTop="32dp"
        android:hint="Restaurant Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_business_add_restaurant_image"/>

    <EditText
        android:id="@+id/fragment_business_add_restaurant_address_input_1"
        android:layout_width="match_parent"
        style="@style/Theme.DevHour.EditText"
        android:layout_marginTop="8dp"
        android:hint="Street Address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_business_add_restaurant_name_input"/>


    <EditText
        android:id="@+id/fragment_business_add_restaurant_address_input_2"
        android:layout_width="match_parent"
        style="@style/Theme.DevHour.EditText"
        android:layout_marginTop="8dp"
        android:hint="City State, Zip Code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_business_add_restaurant_address_input_1"/>

    <Button
        android:id="@+id/fragment_business_add_restaurant_tag_button"
        android:layout_width="match_parent"
        style="@style/Theme.DevHour.ActionButton"
        android:layout_marginTop="8dp"
        android:text="Tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_business_add_restaurant_address_input_2"/>

    <Button
        android:id="@+id/fragment_business_add_restaurant_confirm_button"
        android:layout_width="match_parent"
        style="@style/Theme.DevHour.ActionButton"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_business_add_restaurant_tag_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>