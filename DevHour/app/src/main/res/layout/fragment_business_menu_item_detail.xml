<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Fragment">

    <ImageButton
        android:id="@+id/fragment_business_menu_item_detail_back_button"
        style="@style/Theme.DevHour.BackButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/back_button_color_light"
        tools:ignore="SpeakableTextPresentCheck" />


    <ImageView
        android:id="@+id/fragment_business_menu_item_detail_meal_image"
        style="@style/Theme.DevHour.BigRoundImage"
        app:srcCompat="@drawable/icon_edit"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <EditText
        android:id="@+id/fragment_business_menu_item_detail_name_input"
        android:text="Meal Name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        style="@style/Theme.DevHour.EditText"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_business_menu_item_detail_meal_image"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_business_menu_item_detail_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_business_menu_item_detail_name_input"
        app:layout_constraintBottom_toTopOf="@+id/fragment_business_menu_item_detail_ingredient_button"/>

    <Button
        android:id="@+id/fragment_business_menu_item_detail_ingredient_button"
        android:layout_width="match_parent"
        style="@style/Theme.DevHour.ActionButton"
        android:layout_marginBottom="8dp"
        android:text="Add Ingredient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fragment_business_menu_item_detail_tag_button"/>

    <Button
        android:id="@+id/fragment_business_menu_item_detail_tag_button"
        android:layout_width="match_parent"
        style="@style/Theme.DevHour.ActionButton"
        android:layout_marginBottom="8dp"
        android:text="Tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fragment_business_menu_item_detail_confirm_button"/>

    <Button
        android:id="@+id/fragment_business_menu_item_detail_confirm_button"
        android:layout_width="match_parent"
        style="@style/Theme.DevHour.ActionButton"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>